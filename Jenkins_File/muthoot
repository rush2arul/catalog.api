pipeline {
  agent any
  triggers {
    GenericTrigger(
     genericVariables: [
      [key: 'ref', value: '$.ref']
     ],

     causeString: 'Triggered on $ref',

     token: 'NEW_PIPE',
     tokenCredentialId: '',

     printContributedVariables: true,
     printPostContent: true,

     silentResponse: false,

     regexpFilterText: 'refs/heads/develop',
     regexpFilterExpression: 'refs/heads/' + BRANCH_NAME
    )
  }
  stages {
    stage('Validation') {
      steps {
        sh "echo Validation"
      	   }
    }

    stage('Build') {
      steps {
	 dir('src')
        	{       
		sh 'docker build -t catalog.api .'
        	}

      }
    }
    stage('Deploy') {
      steps {

	 dir('src')
	        {  
		sh 'docker container stop catalog.api && docker container rm catalog.api '
		sh 'docker run -d --env-file env.catalog.api -p "8000:80"  --name catalog.api  catalog.api'  
        	}

      	}
    		}
  	}
}
