pipeline {
  agent any
  triggers {
    GenericTrigger(
     genericVariables: [
      [key: 'ref', value: '$.ref']
     ],

     causeString: 'Triggered on $ref',

     token: 'NEW_PIPE',
     tokenCredentialId: '',

     printContributedVariables: true,
     printPostContent: true,

     silentResponse: false,

     regexpFilterText: 'refs/heads/develop',
     regexpFilterExpression: 'refs/heads/' + BRANCH_NAME
    )
  }
  stages {
    stage('Validation') {
      steps {
        sh "echo Validation"
      	   }
    }

    stage('Build') {
      steps {
	 dir('src')
        	{       
		echo "Build"
        	}

      }
    }
    stage('Deploy') {
      steps {

	 dir('src')
	        {  
		docker ps --format '{{.Names}}' | grep catalog.api && echo found_running 
         	echo "Finished"
		
        	}

      	}
    		}
  	}
}
